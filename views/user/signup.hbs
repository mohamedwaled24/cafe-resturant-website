<div class="col-md-4 offset-md-4">
  {{#each messages}}
  <div class="alert alert-danger">
    <p>
      {{this}}
    </p>
  </div>
  {{/each}}
  <form action="signup" method="POST">
    <div class="form-group">
      <label for="email" name="email">
        Email
      </label>
      <input type="text" class="form-control" name="email" placeholder="Enter Your Email" />
    </div>
    <div class="form-group">
      <label for="Password" name="Password">
        Password
      </label>
      <input type="password" class="form-control" name="Password" placeholder="Enter Your Password" />
    </div>
    <div class="form-group">
      <label for="confirm-password" name="confirm-password">
        confirm-password
      </label>
      <input type="password" class="form-control" name="confirm-Password" placeholder="Re-Enter Your password" />
    </div>
    <div class="form-group">
       <input type="hidden" name="_csrf" id="" value="{{token}}">
      <button>
        submit
      </button>
    </div>
  </form>
</div>
{{! [  
  check('email').not().isEmpty().withMessage('please enter your email'),
  check('email').isEmail.withMessage('email is not valid'),
  check('password').not().isEmpty.withMessage('please enter password'),
  check('password').length({ min : 5}).withMessage('password should be more than 5 characters'),
  check('confirm-password').custom(value , req.body.password , (err))
]  , }}